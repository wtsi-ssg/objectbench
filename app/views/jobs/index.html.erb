<h1>Listing jobs</h1>

<table>
  <thead>
    <tr>
      <th>Reference file</th>
      <th>Md5sum</th>
      <th>Operation</th>
      <th>Storage type</th>
      <th>Aasm state</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.reference_file %></td>
        <td><%= job.md5sum %></td>
        <td><%= job.operation %></td>
        <td><%= job.storage_type %></td>
        <td><%= job.aasm_state %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>
